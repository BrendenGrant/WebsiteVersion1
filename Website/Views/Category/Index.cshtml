

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="container container-table">
    <div class="row vertical-center-row">
     <h2> Choose Category</h2>
        @using (Html.BeginForm("Index", "Category", FormMethod.Post))
            {
            <div class="div-block"></div>
            <div class="col-md-8 col-md-offset-4 alert-info">
                <span>@Html.RadioButton("Category", 1) Books</span> <br />
                <span>@Html.RadioButton("Category", 2) Appliances </span><br />
                <span>@Html.RadioButton("Category", 3) Arts, Crafts & Sewing</span><br />
                <span>@Html.RadioButton("Category", 4) Baby</span><br />
                <span>@Html.RadioButton("Category", 5) Automotive</span><br />
                <span>@Html.RadioButton("Category", 6) Beauty</span><br /><br />



                <input type="submit" value="Submit" class="submit-button w-button" />
            </div>
            <br/><br /><br />
            <div class=" text-block alert-info">@ViewBag.msg</div>
        }
        </div>
        </div>



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
